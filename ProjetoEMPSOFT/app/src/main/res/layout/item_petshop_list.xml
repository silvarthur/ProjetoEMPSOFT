<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_companies_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/card_pet_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Nome do Pet Shop" />

            <TextView
                android:id="@+id/card_pet_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_pet_shop_name"
                android:layout_margin="8dp"
                android:text="EndereÃ§o do Pet Shop" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>